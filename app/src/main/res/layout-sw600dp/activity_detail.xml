<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tablet_detail_layout"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/steps_container"
        android:layout_below="@id/ingredients_container"
        android:layout_height="wrap_content"
        android:layout_width="240dp"
        android:layout_marginBottom="50dp"
        ></FrameLayout>

    <FrameLayout
        android:id="@+id/ingredients_container"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_below="@id/ingredients_container"></FrameLayout>

    <TextView
        android:id="@+id/description_detail_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ingredients_container"
        android:layout_below="@id/exoPlayer_container"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        tools:text="some description string to check out how everything fits together." />

    <TextView
        android:id="@+id/step_description_detail_View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ingredients_container"
        android:layout_below="@id/description_detail_view"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        tools:text="some description to describe whats going to happen" />

    <FrameLayout
        android:id="@+id/exoPlayer_container"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/ingredients_container"
        android:layout_height="300dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="30dp"/>

</RelativeLayout>