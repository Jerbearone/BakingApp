<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recipe_list_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:drawable/editbox_background">

    <TextView
        android:id="@+id/recycler_recipe_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:textSize="40sp"
        tools:text="some dummy test" />

    <TextView
        android:id="@+id/servings_label_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recycler_recipe_text"
        android:gravity="center"
        android:text="servingSize: "
        android:textSize="20sp" />

    <TextView
        android:id="@+id/serving_size_text_view"
        android:layout_below="@id/recycler_recipe_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/servings_label_view"
        android:gravity="center"
        android:textSize="20sp"
        tools:text="8" />

</RelativeLayout>